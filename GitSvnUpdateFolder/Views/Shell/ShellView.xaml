<Window x:Class="GitSvnUpdateFolder.Views.Shell.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/prism"
        xmlns:local="clr-namespace:GitSvnUpdateFolder"
        Title="ShellView" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Row="0" Grid.ColumnSpan="2" 
                                cal:RegionManager.RegionName="{x:Static local:RegionNames.TopRegion}"/>

        <ContentControl Grid.Row="1" Grid.Column="0" 
                                cal:RegionManager.RegionName="{x:Static local:RegionNames.LeftRegion}"/>
        <GridSplitter ResizeDirection="Columns" Grid.Row="1" Width="4" />
        <ContentControl Grid.Row="1" Grid.Column="1" 
                                cal:RegionManager.RegionName="{x:Static local:RegionNames.RightRegion}"/>

        <ContentControl Grid.Row="2" Grid.ColumnSpan="2" 
                                cal:RegionManager.RegionName="{x:Static local:RegionNames.BottomRegion}"/>
    </Grid>
</Window>
